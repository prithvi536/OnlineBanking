@{
    Layout = "StartPage";
}
@model OnlineBanking_Final.Models.AccountHolder;

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center">User Login</h1>
                        @if (!string.IsNullOrEmpty(ViewBag.Message))
                        {
                            <div class="alert alert-danger">@ViewBag.Message</div>
                        }

                        <div class="form-group">
                            <label for="UserName">Enter the UserName</label>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessageFor(x => x.UserName)</span>
                        </div>

                        <div class="form-group">
                            <label for="Password">Enter the Password</label>
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessageFor(x => x.Password)</span>
                        </div>
                        <br />
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">LOGIN</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>