<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineBanking</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        .navbar {
            
            padding: 1rem; 
        }

        .navbar-brand {
            
            font-size: 1.5rem; 
        }

        .navbar-nav .nav-link {
            font-size: 1.2rem; 
        }

        .navbar-collapse {
            justify-content: flex-end;
        }

    

        .carousel {
            width: 100%;
        }

        .carousel-item img {
            height: 450px;
            object-fit: cover;
        }
    </style>
</head>
<body style="background-color:aliceblue">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow" style="background-color:#B5C0D0;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-bank2"></i> AAP BANK</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="AddPayee" asp-action="PAdd">Add Payee</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="FundTransfer" asp-action="fTransfer">Fund Transfer</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="FixedDeposits" asp-action="CreateFD">Open FD</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="FdClose" asp-action="Read">View FD's</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="DebitCard" asp-action="DebitCardDetails">DebitCard</a>
                        </li>
                      
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Logout" asp-action="Signout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
   
     @RenderBody()
    <footer>

    </footer>
  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
